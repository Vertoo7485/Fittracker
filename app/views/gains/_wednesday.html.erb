<%= render 'shared/errors', object: @gain %>
<%= form_with model: [@user, @gain] do |f| %>

  <div class="mb-3 row">
    <%= f.hidden_field(:day, value: "wednesday") %>
    <div class="col-sm-2 col-form-label">
      <%= f.label :horizontal_pull_block %>
    </div>

    <div class="col-sm-10">
      <%= f.text_field :horizontal_pull_block, placeholder: t('activerecord.attributes.powers.placeholder'),
       class: 'form-control form-control-lg' %>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :pull_ups %>
    </div>

    <div class="col-sm-10">
      <%= f.text_field :pull_ups, placeholder: t('activerecord.attributes.powers.placeholder'),
       class: 'form-control form-control-lg' %>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :barbell_forearm_curls %>
    </div>

    <div class="col-sm-10">
      <%= f.text_field :barbell_forearm_curls, placeholder: t('activerecord.attributes.powers.placeholder'),
       class: 'form-control form-control-lg' %>
    </div>
  </div>

<div class="my-3 mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :incline_dumbbell_row %>
    </div>

    <div class="col-sm-10">
      <%= f.text_field :incline_dumbbell_row, placeholder: t('activerecord.attributes.powers.placeholder'),
       class: 'form-control form-control-lg' %>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :vertical_pull_block %>
    </div>

    <div class="col-sm-10">
      <%= f.text_field :vertical_pull_block, placeholder: t('activerecord.attributes.powers.placeholder'),
       class: 'form-control form-control-lg' %>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :hyperextension %>
    </div>

    <div class="col-sm-10">
      <%= f.text_field :hyperextension, placeholder: t('activerecord.attributes.powers.placeholder'),
       class: 'form-control form-control-lg' %>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :hammers %>
    </div>

    <div class="col-sm-10">
      <%= f.text_field :hammers, placeholder: t('activerecord.attributes.powers.placeholder'),
       class: 'form-control form-control-lg' %>
    </div>
  </div>


  <%= f.submit t('users.global.forms.save'),
    class: 'btn btn-primary btn-lg' %>
<% end %>