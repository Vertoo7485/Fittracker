<%= render 'shared/errors', object: @gain %>
<%= form_with model: [@user, @gain] do |f| %>

<h1 class="mb-4 row">Самое время изменить тренировки! Введите новые параметры</h1> 

  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :incline_dumbbell_mahi %>
    </div>

    <div class="col-sm-10">
      <%= f.text_field :incline_dumbbell_mahi, placeholder: t('activerecord.attributes.powers.placeholder'),
       class: 'form-control form-control-lg' %>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :trusters %>
    </div>

    <div class="col-sm-10">
      <%= f.text_field :trusters, placeholder: t('activerecord.attributes.powers.placeholder'),
       class: 'form-control form-control-lg' %>
    </div>
  </div>

<div class="my-3 mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :kettlebell_swing %>
    </div>

    <div class="col-sm-10">
      <%= f.text_field :kettlebell_swing, placeholder: t('activerecord.attributes.powers.placeholder'),
       class: 'form-control form-control-lg' %>
    </div>
  </div>

  <%= f.submit t('users.global.forms.save'),
    class: 'btn btn-primary btn-lg' %>
<% end %>