    <div class="col-sm-2 col-form-label">
      <%= f.label :barbell_pull_to_chin %>
    </div>

    <div class="col-sm-10">
      <%= f.text_field :barbell_pull_to_chin, placeholder: t('activerecord.attributes.powers.placeholder'),
       class: 'form-control form-control-lg' %>
    </div>
  </div>

  <%= f.submit t('users.global.forms.save'),
    class: 'btn btn-primary btn-lg' %>
