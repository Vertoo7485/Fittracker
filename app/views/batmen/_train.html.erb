<div class="progress">
  <div class="progress-bar bg-dark progress-bar-striped progress-bar-animated" role="progressbar"
       style="width: <%= current_batman_training.count_update_training * 2%>%"
       aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
       <%= current_batman_training.count_update_training * 2%>%
  </div>
</div>

<div class="dropdown center my-3">
  <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
    <%= t('global.dropdown.change_training')%>
  </button>
  <ul class="dropdown-menu">
    <li>
      <%= link_to t('global.dropdown.monday'), user_batman_path(@user, @batman, day: 'monday'),
        class: 'dropdown-item'%>
    </li>

    <li><hr class="dropdown-divider"></li>

    <li>
      <%= link_to t('global.dropdown.wednesday'), user_batman_path(@user, @batman, day: 'wednesday'),
        class: 'dropdown-item'%>
    </li>

    <li><hr class="dropdown-divider"></li>

    <li>
      <%= link_to t('global.dropdown.friday'), user_batman_path(@user, @batman, day: 'friday'),
        class: 'dropdown-item'%>
    </li>
  </ul>
</div>

<% case params[:day] %>
  <% when 'monday'%>
    <%= render 'monday' %>
  <% when 'wednesday'%>
    <%= render 'wednesday' %>
  <% when 'friday' %>
    <%= render 'friday' %>
<% end %>